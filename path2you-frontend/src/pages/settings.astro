---
import BaseLayout from "../layouts/BaseLayout.astro";
import UserCard from "../components/settings/UserCard";
import '../styles/Settings.styles.css'

const title = "Configuración del usuario";

---



<BaseLayout title={ title }>
    <section class="settings w-full h-fit">
        <div class="settings__presentation mb-8">
            <h1 class="settings__title font-bold text-xl md:text-3xl mb-2">Configuración del usuario</h1>
            <p class="settings__description">Aquí puedes cambiar la configuración de tu cuenta.</p>
        </div>
        <div class="settings__options grid grid-cols-1 md:grid-cols-2 gap-16">
            <UserCard client:load/>
            <div class="preferences w-full">
                <h1 class="preferences__title font-bold text-lg md:text-xl">Preferencias:</h1>
                <div class="preferences___options flex flex-col gap-6 mt-4 w-full">
                    <a href="/settings/new-password" class="preferences__option preferences__option-new-password button-primary">Cambiar la Contraseña</a>
                    <a href="/settings/change-name" class="preferences__option preferences__option-change-name button-primary">Cambiar el Nombre</a>
                    <a href="/settings/delete-account" class="preferences__option preferences__option-delete-account button-primary">Eliminar la Cuenta</a>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>
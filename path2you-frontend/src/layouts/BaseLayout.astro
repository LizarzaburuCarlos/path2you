---
import SideBar from "../components/SideBar.tsx";
import TopBar from "../components/TopBar";
import "../styles/SideBarDefault.styles.css";
import "../styles/TopBarDefault.styles.css";
export interface Props {
  title: string;
  description?: string;
}

const defaultDescription =
  "Una aplicación web E-learning adaptable para personas con problemas de visión.";

const { title, description = defaultDescription } = Astro.props as Props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{title}</title>
  </head>
  <script>
    import { userData } from "../core/helpers";

    const { jwt } = userData();

    if (!jwt) {
      location.replace("/login");
    }
  </script>
  <body>
    <div class="h-screen 2xl:w-[1280px] mx-auto p-4 flex">
      <div class="sidebar min-w-[5rem] w-32 h-full">
        <SideBar client:load />
      </div>
      <div class="content w-full py-4 px-10 h-full overflow-y-auto">
        <TopBar />
        <slot />
      </div>
    </div>
  </body>
</html>

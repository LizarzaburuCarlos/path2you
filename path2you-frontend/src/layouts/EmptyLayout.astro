---
import "../styles/Empty.styles.css";
import "../styles/Utils.styles.css";

export interface Props {
  title: string;
  description?: string;
}

const defaultDescription =
  "Una aplicación web E-learning adaptable para personas con problemas de visión.";

const { title, description = defaultDescription } = Astro.props as Props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style>
      /* :root {
            --primary: #1a1a1a;
            --secondary: #f2f2f2;
            --accent: #ff6f00;
            --accent-dark: #c43e00;
            --accent-light: #ffa040;
            --accent-lighter: #ffca73;
            --accent-lightest: #ffe6a6;
            --accent-darkest: #a33e00;
            --accent-darker: #c36f00;
        }
        body {
            margin: 0;
            padding: 0;
            font-family: 'Roboto', sans-serif;
            background-color: var(--primary);
            color: var(--secondary);
        } */

    </style>
  </head>
  <script>
    import { userData } from "../core/helpers";

    const { jwt } = userData();
    const currentPath = location.pathname;

    if (jwt && (currentPath === "/login" || currentPath === "/register"))  {
      location.replace("/");
    }
  </script>

  <body>
    <slot />
  </body>
</html>
